using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Plata
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Vnesete prva plata:");
            int prvaPlata = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Vnesete prva plata:");
            int vtoraPlata = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Vnesete prva plata:");
            int tretaPlata = Convert.ToInt32(Console.ReadLine());
            if (vtoraPlata - prvaPlata == tretaPlata - vtoraPlata)
            {
                Console.WriteLine(tretaPlata + (vtoraPlata - prvaPlata));

            }
            else
            {
                Console.WriteLine(tretaPlata * (tretaPlata / vtoraPlata)); 
            }
            
        }
    }
}
