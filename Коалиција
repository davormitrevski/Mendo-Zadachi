using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Koalicija
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = Convert.ToInt32(Console.ReadLine());
            double predlozi = 0;
            for (int i = 1; i <= n; i++)
            {
                predlozi = predlozi + Math.Pow(2, i);
            }
            Console.WriteLine(predlozi);
        }
    }
}
